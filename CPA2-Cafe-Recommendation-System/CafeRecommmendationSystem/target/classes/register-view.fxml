<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.edu.dlsu.lbycpei.caferecommmendationsystem.RegisterController" style="-fx-background-color: #F9E0D1;">
    <children>
        <Label text="Register New Account" style="-fx-font-family: 'Georgia'; -fx-font-size: 20px; -fx-text-fill: #5C4B51;"/>

        <TextField fx:id="usernameField" maxWidth="250.0" promptText="Username" style="-fx-background-color: #FFFFFF; -fx-text-fill: #5C4B51; -fx-font-family: 'Georgia'; -fx-font-size: 14px; -fx-border-radius: 10px;"/>

        <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Password" style="-fx-background-color: #FFFFFF; -fx-text-fill: #5C4B51; -fx-font-family: 'Georgia'; -fx-font-size: 14px; -fx-border-radius: 10px;"/>

        <PasswordField fx:id="confirmPasswordField" maxWidth="250.0" promptText="Confirm Password" style="-fx-background-color: #FFFFFF; -fx-text-fill: #5C4B51; -fx-font-family: 'Georgia'; -fx-font-size: 14px; -fx-border-radius: 10px;"/>

        <Button mnemonicParsing="false" onAction="#handleRegister" prefWidth="100.0" text="Register" style="-fx-background-color: #F8C8DC; -fx-text-fill: #5C4B51; -fx-font-family: 'Georgia'; -fx-font-size: 14px; -fx-border-radius: 25px;"/>

        <Button mnemonicParsing="false" onAction="#handleBackToLogin" text="Back to Login" style="-fx-background-color: #F8C8DC; -fx-text-fill: #5C4B51; -fx-font-family: 'Georgia'; -fx-font-size: 14px; -fx-border-radius: 25px;"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
