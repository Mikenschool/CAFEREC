<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="10.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ph.edu.dlsu.lbycpei.caferecommmendationsystem.RegisterController">
    <children>
        <Label text="Register New Account">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <TextField fx:id="usernameField" maxWidth="250.0" promptText="Username" />
        <PasswordField fx:id="passwordField" maxWidth="250.0" promptText="Password" />
        <PasswordField fx:id="confirmPasswordField" maxWidth="250.0" promptText="Confirm Password" />
        <Button mnemonicParsing="false" onAction="#handleRegister" prefWidth="100.0" text="Register">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#handleBackToLogin" text="Back to Login" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>